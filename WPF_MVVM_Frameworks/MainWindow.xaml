<Window x:Class="WPF_MVVM_Frameworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MVVM_Frameworks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="CadetBlue" Grid.Row="0" Height="50" VerticalAlignment="Top">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20px" Foreground="White">Students</Label>
            <Button Click="Button_Click" Width="50px" HorizontalAlignment="Right" Background="Red" Foreground="White">Delete</Button>
            <Button Click="Button_Click_1" Width="50px" HorizontalAlignment="Right" Background="Green" Foreground="White" Margin="0,0,102,0">Add</Button>
            <Button Click="Button_Click_2" Width="50px" HorizontalAlignment="Right" Background="DarkOrange" Foreground="White" Margin="0,0,51,0">Modify</Button>
        </Grid>
    </Grid>
</Window>
